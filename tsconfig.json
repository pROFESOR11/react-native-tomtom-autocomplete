{
  "compilerOptions": {
    "lib": ["es5", "es6", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "jsx": "react-native",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
